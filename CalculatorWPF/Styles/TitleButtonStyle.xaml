<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="TitleButton" TargetType="Button">
        <Setter Property="Control.Margin" Value="5,0,5,0"/>
        <Setter Property="Control.Background" Value="#262626"/>
        <Setter Property="Control.Foreground" Value="White"/>
        <Setter Property="Control.FontWeight" Value="Bold"/>
        <Setter Property="Control.FontSize" Value="12"/>
        <Setter Property="Control.Height" Value="20"/>
        <Setter Property="Control.Width" Value="20"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border  
                         Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Control.Background" Value="#353636"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>